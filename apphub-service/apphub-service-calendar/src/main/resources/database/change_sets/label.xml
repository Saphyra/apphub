<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-label" author="Saphyra">
        <preConditions>
            <not>
                <tableExists schemaName="calendar" tableName="label"/>
            </not>
        </preConditions>

        <createTable schemaName="calendar" tableName="label">
            <column name="label_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(37)"/>
            <column name="label" type="text"/>
        </createTable>

        <addPrimaryKey schemaName="calendar" tableName="label" columnNames="label_id" constraintName="label-pk"/>
    </changeSet>
</databaseChangeLog>