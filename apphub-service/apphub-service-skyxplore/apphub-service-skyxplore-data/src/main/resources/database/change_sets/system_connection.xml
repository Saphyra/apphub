<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-system_connection" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="skyxplore_game" tableName="system_connection"/>
            </not>
        </preConditions>

        <createTable schemaName="skyxplore_game" tableName="system_connection">
            <column name="system_connection_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="game_id" type="varchar(37)"/>
        </createTable>

        <addPrimaryKey schemaName="skyxplore_game" tableName="system_connection" columnNames="system_connection_id" constraintName="system_connection_pk"/>
    </changeSet>

    <changeSet id="drop-table-system_connection" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <tableExists schemaName="skyxplore_game" tableName="system_connection"/>
        </preConditions>

        <dropTable schemaName="skyxplore_game" tableName="system_connection"/>
    </changeSet>
</databaseChangeLog>