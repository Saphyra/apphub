<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-durability_item" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="skyxplore_game" tableName="durability_item"/>
            </not>
        </preConditions>

        <createTable schemaName="skyxplore_game" tableName="durability_item">
            <column name="durability_item_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="game_id" type="varchar(37)"/>
            <column name="parent" type="varchar(37)"/>
            <column name="metadata" type="text"/>
            <column name="data_id" type="varchar(255)"/>
            <column name="max_durability" type="integer"/>
            <column name="current_durability" type="integer"/>
        </createTable>

        <addPrimaryKey schemaName="skyxplore_game" tableName="durability_item" columnNames="durability_item_id" constraintName="durability_item_pk"/>
    </changeSet>
</databaseChangeLog>