<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-construction_area" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="skyxplore_game" tableName="construction_area"/>
            </not>
        </preConditions>

        <createTable schemaName="skyxplore_game" tableName="construction_area">
            <column name="construction_area_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="game_id" type="varchar(37)"/>
            <column name="location" type="varchar(37)"/>
            <column name="surface_id" type="varchar(37)"/>
            <column name="data_id" type="text"/>
        </createTable>

        <addPrimaryKey schemaName="skyxplore_game" tableName="construction_area" columnNames="construction_area_id" constraintName="construction_area_pk"/>
    </changeSet>
</databaseChangeLog>
