<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-universe" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="skyxplore_game" tableName="universe"/>
            </not>
        </preConditions>

        <createTable schemaName="skyxplore_game" tableName="universe">
            <column name="game_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="integer"/>
        </createTable>

        <addPrimaryKey schemaName="skyxplore_game" tableName="universe" columnNames="game_id" constraintName="universe_pk"/>
    </changeSet>

    <changeSet id="drop-table-universe" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <tableExists schemaName="skyxplore_game" tableName="universe"/>
        </preConditions>

        <dropTable schemaName="skyxplore_game" tableName="universe"/>
    </changeSet>
</databaseChangeLog>