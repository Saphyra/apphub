<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-item_equipment" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="elite_base" tableName="item_equipment"/>
            </not>
        </preConditions>

        <createTable schemaName="elite_base" tableName="item_equipment">
            <column name="item_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="external_reference" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="location_type" type="varchar(255)"/>
            <column name="market_id" type="numeric"/>
            <column name="star_system_id" type="varchar(255)"/>
        </createTable>

        <addPrimaryKey schemaName="elite_base" tableName="item_equipment" columnNames="item_name,external_reference" constraintName="item_equipment-pk"/>
    </changeSet>

    <changeSet id="create-index-market_id-on-item_equipment" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_equipment" indexName="index-item_equipment-market_id"/>
            </not>
        </preConditions>

        <createIndex schemaName="elite_base" tableName="item_equipment" indexName="index-item_equipment-market_id">
            <column name="market_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>