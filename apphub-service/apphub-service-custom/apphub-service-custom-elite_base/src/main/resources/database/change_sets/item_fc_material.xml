<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-item_fc_material" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="elite_base" tableName="item_fc_material"/>
            </not>
        </preConditions>

        <createTable schemaName="elite_base" tableName="item_fc_material">
            <column name="item_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="external_reference" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="location_type" type="varchar(255)"/>
            <column name="market_id" type="numeric"/>
            <column name="buy_price" type="numeric"/>
            <column name="sell_price" type="numeric"/>
            <column name="demand" type="numeric"/>
            <column name="stock" type="numeric"/>
        </createTable>

        <addPrimaryKey schemaName="elite_base" tableName="item_fc_material" columnNames="item_name,external_reference" constraintName="item_fc_material-pk"/>
    </changeSet>

    <changeSet id="create-index-market_id-on-item_fc_material" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-market_id"/>
            </not>
        </preConditions>

        <createIndex schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-market_id">
            <column name="market_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-index-item_name-stock-sell_price-on-item_fc_material" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-item_name-stock-sell_price"/>
            </not>
        </preConditions>

        <createIndex schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-item_name-stock-sell_price">
            <column name="item_name"/>
            <column name="stock"/>
            <column name="sell_price"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-index-item_name-demand-buy_price-on-item_fc_material" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-item_name-demand-buy_price"/>
            </not>
        </preConditions>

        <createIndex schemaName="elite_base" tableName="item_fc_material" indexName="index-item_fc_material-item_name-demand-buy_price">
            <column name="item_name"/>
            <column name="demand"/>
            <column name="buy_price"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>