<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-item_commodity" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="elite_base" tableName="item_commodity"/>
            </not>
        </preConditions>

        <createTable schemaName="elite_base" tableName="item_commodity">
            <column name="item_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="external_reference" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="location_type" type="varchar(255)"/>
            <column name="market_id" type="numeric"/>
            <column name="buy_price" type="numeric"/>
            <column name="sell_price" type="numeric"/>
            <column name="demand" type="numeric"/>
            <column name="stock" type="numeric"/>
            <column name="star_system_id" type="varchar(255)"/>
        </createTable>

        <addPrimaryKey schemaName="elite_base" tableName="item_commodity" columnNames="item_name,external_reference" constraintName="item_commodity-pk"/>
    </changeSet>

    <changeSet id="create-index-market_id-on-item_commodity" author="Saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_commodity" indexName="index-item_commodity-market_id"/>
            </not>
        </preConditions>

        <createIndex schemaName="elite_base" tableName="item_commodity" indexName="index-item_commodity-market_id">
            <column name="market_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-index-trade_offer-on-item_commodity" author="Saphyra" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="elite_base" tableName="item_commodity" indexName="index_item_commodity_trade_offer"/>
            </not>
        </preConditions>

        <sql>
            CREATE INDEX index_item_commodity_trade_offer ON elite_base.item_commodity (item_name)
            INCLUDE(external_reference, star_system_id, buy_price, sell_price, demand, stock);
        </sql>
    </changeSet>
</databaseChangeLog>