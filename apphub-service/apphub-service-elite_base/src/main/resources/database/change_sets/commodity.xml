<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-table-commodity" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="elite_base" tableName="commodity"/>
            </not>
        </preConditions>

        <createTable schemaName="elite_base" tableName="commodity">
            <column name="id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(255)"/>
            <column name="commodity_location" type="varchar(255)"/>
            <column name="external_reference" type="varchar(37)"/>
            <column name="market_id" type="numeric"/>
            <column name="commodity_name" type="text" />
            <column name="buy_price" type="numeric"/>
            <column name="sell_price" type="numeric"/>
            <column name="demand" type="numeric"/>
            <column name="stock" type="numeric"/>
        </createTable>

        <addPrimaryKey schemaName="elite_base" tableName="commodity" columnNames="id" constraintName="commodity-pk"/>

        <createIndex schemaName="elite_base" tableName="commodity" indexName="index-commodity-commodity_name-external_reference">
            <column name="commodity_name"/>
            <column name="external_reference"/>
        </createIndex>

        <createIndex schemaName="elite_base" tableName="commodity" indexName="index-commodity-commodity_name-market_id">
            <column name="commodity_name"/>
            <column name="market_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>