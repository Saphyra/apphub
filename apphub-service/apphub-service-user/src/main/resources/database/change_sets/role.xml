<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-role" author="saphyra">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="apphub_user" tableName="apphub_role"/>
            </not>
        </preConditions>

        <createTable schemaName="apphub_user" tableName="apphub_role">
            <column name="role_id" type="varchar(37)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(37)"/>
            <column name="apphub_role" type="text"/>
        </createTable>

        <addPrimaryKey schemaName="apphub_user" tableName="apphub_role" columnNames="role_id" constraintName="apphub_role-pk"/>
    </changeSet>
</databaseChangeLog>